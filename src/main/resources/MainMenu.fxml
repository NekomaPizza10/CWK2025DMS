<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.comp2042.MainMenuController"
      alignment="CENTER" spacing="20"
      style="-fx-background-color: linear-gradient(to bottom, #0a0a0a, #1a1a2e);">

    <padding>
        <Insets top="50" right="50" bottom="50" left="50"/>
    </padding>

    <!-- Title -->
    <Label text="TETRIS"
           style="-fx-font-size: 60px; -fx-font-weight: bold; -fx-text-fill: white;"/>

    <Label text="Classic Block Game"
           style="-fx-font-size: 18px; -fx-text-fill: #888888;"/>

    <!-- Spacer -->
    <Region prefHeight="20"/>

    <!-- Play Button -->
    <Button fx:id="playButton"
            text="PLAY GAME"
            onAction="#handlePlay"
            prefWidth="250" prefHeight="50"
            style="-fx-font-size: 20px; -fx-font-weight: bold;
                   -fx-background-color: #00ff88; -fx-text-fill: black;
                   -fx-cursor: hand;"/>

    <!-- How to Play Button -->
    <Button text="HOW TO PLAY"
            onAction="#handleHowToPlay"
            prefWidth="250" prefHeight="50"
            style="-fx-font-size: 18px; -fx-font-weight: bold;
                   -fx-background-color: transparent;
                   -fx-border-color: #00aaff; -fx-border-width: 2;
                   -fx-text-fill: #00aaff;
                   -fx-cursor: hand;"/>

    <!-- Exit Button -->
    <Button text="EXIT"
            onAction="#handleExit"
            prefWidth="250" prefHeight="50"
            style="-fx-font-size: 18px; -fx-font-weight: bold;
                   -fx-background-color: transparent;
                   -fx-border-color: #ff4444; -fx-border-width: 2;
                   -fx-text-fill: #ff4444;
                   -fx-cursor: hand;"/>

</VBox>