<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.control.ScrollPane?>
<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.comp2042.MainMenuController">

    <!-- Main Menu -->
    <VBox fx:id="mainMenuBox" alignment="CENTER" spacing="20"
          style="-fx-background-color: linear-gradient(to bottom, #0a0a0a, #1a1a2e);">
        <padding>
            <Insets top="50" right="50" bottom="50" left="50"/>
        </padding>

        <!-- Title -->
        <Label text="TETRIS"
               style="-fx-font-size: 60px; -fx-font-weight: bold; -fx-text-fill: white;"/>

        <Label text="Classic Block Game"
               style="-fx-font-size: 18px; -fx-text-fill: #888888;"/>

        <Region prefHeight="10"/>

        <!-- Select Mode Label -->
        <Label text="SELECT GAME MODE"
               style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #00ff88;"/>

        <!-- Normal Mode Button -->
        <VBox spacing="5" alignment="CENTER">
            <Button fx:id="normalModeButton"
                    text="NORMAL MODE"
                    onAction="#handleNormalMode"
                    prefWidth="280" prefHeight="50"
                    style="-fx-font-size: 18px; -fx-font-weight: bold;
                           -fx-background-color: #00ff88; -fx-text-fill: black;
                           -fx-background-radius: 5; -fx-cursor: hand;"/>
            <Label text="Practice with increasing speed"
                   style="-fx-font-size: 11px; -fx-text-fill: #666666;"/>
        </VBox>

        <!-- 40 Lines Mode Button -->
        <VBox spacing="5" alignment="CENTER">
            <Button fx:id="fortyLinesButton"
                    text="40 LINES CHALLENGE"
                    onAction="#handleFortyLinesMode"
                    prefWidth="280" prefHeight="50"
                    style="-fx-font-size: 18px; -fx-font-weight: bold;
                           -fx-background-color: transparent;
                           -fx-border-color: #ff9900; -fx-border-width: 2;
                           -fx-text-fill: #ff9900;
                           -fx-background-radius: 5; -fx-border-radius: 5;
                           -fx-cursor: hand;"/>
            <Label text="Clear 40 lines as fast as possible"
                   style="-fx-font-size: 11px; -fx-text-fill: #666666;"/>
        </VBox>

        <!-- 2 Minutes Mode Button -->
        <VBox spacing="5" alignment="CENTER">
            <Button fx:id="twoMinutesButton"
                    text="2 MINUTES CHALLENGE"
                    onAction="#handleTwoMinutesMode"
                    prefWidth="280" prefHeight="50"
                    style="-fx-font-size: 18px; -fx-font-weight: bold;
                           -fx-background-color: transparent;
                           -fx-border-color: #00aaff; -fx-border-width: 2;
                           -fx-text-fill: #00aaff;
                           -fx-background-radius: 5; -fx-border-radius: 5;
                           -fx-cursor: hand;"/>
            <Label text="Clear as many lines as you can"
                   style="-fx-font-size: 11px; -fx-text-fill: #666666;"/>
        </VBox>

        <Region prefHeight="10"/>

        <!-- How to Play Button -->
        <Button fx:id="howToPlayButton"
                text="HOW TO PLAY"
                onAction="#handleHowToPlay"
                prefWidth="200" prefHeight="40"
                style="-fx-font-size: 14px; -fx-font-weight: bold;
                       -fx-background-color: transparent;
                       -fx-border-color: #666666; -fx-border-width: 2;
                       -fx-text-fill: #666666;
                       -fx-background-radius: 5; -fx-border-radius: 5;
                       -fx-cursor: hand;"/>

        <!-- Exit Button -->
        <Button fx:id="exitButton"
                text="EXIT"
                onAction="#handleExit"
                prefWidth="200" prefHeight="40"
                style="-fx-font-size: 14px; -fx-font-weight: bold;
                       -fx-background-color: transparent;
                       -fx-border-color: #ff4444; -fx-border-width: 2;
                       -fx-text-fill: #ff4444;
                       -fx-background-radius: 5; -fx-border-radius: 5;
                       -fx-cursor: hand;"/>
    </VBox>

    <!-- How to Play Overlay -->
    <StackPane fx:id="howToPlayPanel" visible="false"
               style="-fx-background-color: rgba(0, 0, 0, 0.95);">
        <VBox alignment="CENTER" spacing="20">
            <padding>
                <Insets top="30" right="50" bottom="30" left="50"/>
            </padding>

            <!-- Title -->
            <Label text="HOW TO PLAY"
                   style="-fx-font-size: 42px; -fx-font-weight: bold; -fx-text-fill: #00aaff;"/>

            <!-- Scrollable Content -->
            <ScrollPane fitToWidth="true" fitToHeight="true"
                        style="-fx-background: transparent; -fx-background-color: transparent;"
                        prefHeight="500" maxWidth="750">
                <VBox spacing="25" alignment="TOP_LEFT"
                      style="-fx-background-color: rgba(255,255,255,0.05);
                             -fx-padding: 40;
                             -fx-background-radius: 15;
                             -fx-border-color: rgba(255,255,255,0.1);
                             -fx-border-radius: 15;
                             -fx-border-width: 2;">

                    <!-- Objective -->
                    <VBox spacing="10">
                        <Label text="OBJECTIVE"
                               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #00ff88;"/>
                        <Label text="Arrange falling blocks to create complete horizontal lines. Completed lines will disappear, earning you points!"
                               wrapText="true"
                               style="-fx-font-size: 14px; -fx-text-fill: #cccccc; -fx-line-spacing: 3;"/>
                    </VBox>

                    <Region prefHeight="1" style="-fx-background-color: rgba(255,255,255,0.1);"/>

                    <!-- Controls -->
                    <VBox spacing="15">
                        <Label text="CONTROLS"
                               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #00ff88;"/>

                        <GridPane hgap="30" vgap="10">
                            <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="0">
                                <HBox spacing="15" alignment="CENTER_LEFT">
                                    <Label text="← / A" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #00aaff; -fx-min-width: 70;"/>
                                    <Label text="Move Left" style="-fx-font-size: 14px; -fx-text-fill: white;"/>
                                </HBox>
                                <HBox spacing="15" alignment="CENTER_LEFT">
                                    <Label text="→ / D" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #00aaff; -fx-min-width: 70;"/>
                                    <Label text="Move Right" style="-fx-font-size: 14px; -fx-text-fill: white;"/>
                                </HBox>
                                <HBox spacing="15" alignment="CENTER_LEFT">
                                    <Label text="↑ / W" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #00aaff; -fx-min-width: 70;"/>
                                    <Label text="Rotate" style="-fx-font-size: 14px; -fx-text-fill: white;"/>
                                </HBox>
                                <HBox spacing="15" alignment="CENTER_LEFT">
                                    <Label text="↓ / S" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #00aaff; -fx-min-width: 70;"/>
                                    <Label text="Soft Drop" style="-fx-font-size: 14px; -fx-text-fill: white;"/>
                                </HBox>
                            </VBox>

                            <VBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="0">
                                <HBox spacing="15" alignment="CENTER_LEFT">
                                    <Label text="SPACE" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #00aaff; -fx-min-width: 90;"/>
                                    <Label text="Hard Drop" style="-fx-font-size: 14px; -fx-text-fill: white;"/>
                                </HBox>
                                <HBox spacing="15" alignment="CENTER_LEFT">
                                    <Label text="SHIFT / C" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #00aaff; -fx-min-width: 90;"/>
                                    <Label text="Hold Piece" style="-fx-font-size: 14px; -fx-text-fill: white;"/>
                                </HBox>
                                <HBox spacing="15" alignment="CENTER_LEFT">
                                    <Label text="P / ESC" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #00aaff; -fx-min-width: 90;"/>
                                    <Label text="Pause" style="-fx-font-size: 14px; -fx-text-fill: white;"/>
                                </HBox>
                                <HBox spacing="15" alignment="CENTER_LEFT">
                                    <Label text="N" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #00aaff; -fx-min-width: 90;"/>
                                    <Label text="New Game" style="-fx-font-size: 14px; -fx-text-fill: white;"/>
                                </HBox>
                            </VBox>
                        </GridPane>
                    </VBox>

                    <Region prefHeight="1" style="-fx-background-color: rgba(255,255,255,0.1);"/>

                    <!-- Game Modes -->
                    <VBox spacing="12">
                        <Label text="GAME MODES"
                               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #00ff88;"/>

                        <VBox spacing="8">
                            <HBox spacing="10">
                                <Label text="•" style="-fx-font-size: 16px; -fx-text-fill: #00ff88;"/>
                                <VBox spacing="3">
                                    <Label text="Normal Mode" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                                    <Label text="Practice mode with gradually increasing speed. No goals, just survive!"
                                           wrapText="true"
                                           style="-fx-font-size: 13px; -fx-text-fill: #aaaaaa; -fx-max-width: 600;"/>
                                </VBox>
                            </HBox>

                            <HBox spacing="10">
                                <Label text="•" style="-fx-font-size: 16px; -fx-text-fill: #ff9900;"/>
                                <VBox spacing="3">
                                    <Label text="40 Lines Challenge" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                                    <Label text="Clear 40 lines as fast as possible. Race against the clock!"
                                           wrapText="true"
                                           style="-fx-font-size: 13px; -fx-text-fill: #aaaaaa; -fx-max-width: 600;"/>
                                </VBox>
                            </HBox>

                            <HBox spacing="10">
                                <Label text="•" style="-fx-font-size: 16px; -fx-text-fill: #00aaff;"/>
                                <VBox spacing="3">
                                    <Label text="2 Minutes Challenge" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                                    <Label text="Score as many points as you can in exactly 2 minutes!"
                                           wrapText="true"
                                           style="-fx-font-size: 13px; -fx-text-fill: #aaaaaa; -fx-max-width: 600;"/>
                                </VBox>
                            </HBox>
                        </VBox>
                    </VBox>

                    <Region prefHeight="1" style="-fx-background-color: rgba(255,255,255,0.1);"/>

                    <!-- Scoring Tips -->
                    <VBox spacing="10">
                        <Label text="SCORING TIPS"
                               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #00ff88;"/>
                        <Label text="• Clear 4 lines at once (Tetris) for maximum points!"
                               style="-fx-font-size: 13px; -fx-text-fill: #cccccc;"/>
                        <Label text="• Build combos by clearing lines consecutively"
                               style="-fx-font-size: 13px; -fx-text-fill: #cccccc;"/>
                        <Label text="• Use soft drop (↓) and hard drop (SPACE) for bonus points"
                               style="-fx-font-size: 13px; -fx-text-fill: #cccccc;"/>
                        <Label text="• Hold pieces strategically to save them for later!"
                               style="-fx-font-size: 13px; -fx-text-fill: #cccccc;"/>
                    </VBox>
                </VBox>
            </ScrollPane>

            <!-- Close Button -->
            <Button text="CLOSE"
                    onAction="#handleCloseHowToPlay"
                    prefWidth="180" prefHeight="50"
                    style="-fx-font-size: 16px; -fx-font-weight: bold;
                           -fx-background-color: #00aaff; -fx-text-fill: black;
                           -fx-background-radius: 10; -fx-cursor: hand;"/>
        </VBox>
    </StackPane>

</StackPane>